# Environment Configuration Template
# Copy nội dung này vào file .env trong mỗi folder (backend/frontend)

# ============================================
# BACKEND CONFIGURATION (.env)
# ============================================

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=menu_order_db
DB_USER=root
DB_PASSWORD=

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345678901234567890
JWT_EXPIRE=24h

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload
UPLOAD_PATH=./uploads

# ============================================
# FRONTEND CONFIGURATION (.env.local)
# ============================================

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# PRODUCTION CONFIGURATION (change these)
# ============================================

# For Production Backend:
# DB_HOST=your-database-host
# DB_USER=production-user
# DB_PASSWORD=strong-password
# NODE_ENV=production
# JWT_SECRET=use-a-strong-random-secret-key
# FRONTEND_URL=https://yourdomain.com

# For Production Frontend:
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
